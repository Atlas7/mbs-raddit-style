<%= form_for(@user) do |user_form| %>

  <%= user_form.fields_for :profile do |f| %>

    <div class="form-group">
      <%= f.label "Displayed Name" %><br><%= f.text_field :name, class: "form-control"%><br>
      <%= f.label :introduction %><br><%= f.text_area :introduction, class: "form-control"%><br>
      <%= f.label :tagline %><br><%= f.text_field :tagline, class: "form-control"%><br>
    </div>

  <% end %>

  <% if @mode == 'edit' %>
    <div class="form-group">
      <%= user_form.submit "Submit", class: "btn btn-lg btn-primary" %>
    </div>
  <% end %>

<% end %>
