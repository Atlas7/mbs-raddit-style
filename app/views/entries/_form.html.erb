<%= form_for(entry) do |entry_form| %>
  <div class="field">
    <%= entry_form.label :category_id %><br/>
    <%= entry_form.collection_select :category_id, Category.order(:id), :id, :name, include_blank: true %>
  </div>

  <div class="field">
    <%= entry_form.label :medium_id %><br/>
    <%= entry_form.grouped_collection_select :medium_id, Category.order(:id), :media, :name, :id, :name, include_blank: false %>
  </div>

  <div class="form-group">
    <%= entry_form.submit "Create Entry", class: "btn btn-lg btn-primary" %>
  </div>

<% end %>